<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5">
        <h2 class="fw-bolder mb-4 text-center">Categories</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-4 justify-content-center">
            @foreach (var category in ViewBag.categories)
            {
                <div class="col mb-5">
                    <div class="card category-card h-100 text-center p-3">
                        <a href="" class="fw-bolder text-dark text-decoration-none">@category.Name</a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Products Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5">
        <h2 class="fw-bolder mb-4 text-center">Products</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <!-- Product card example -->
            @foreach (var item in ViewBag.products)
            {
                <div class="col mb-5">
                    <div class="card product-card h-100 shadow-sm border-0">
                        <img class="card-img-top" src="/img/@item.Image" alt="@item.Name" />
                        <div class="card-body p-4 text-center">
                            <h5 class="fw-bold mb-3">@item.Name</h5>
                            <p class="text-primary fw-semibold fs-5">$@item.Price</p>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent text-center">
                            <a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</section>
