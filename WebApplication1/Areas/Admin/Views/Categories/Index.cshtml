@model List<Category>
<div class="card-body table-responsive p-0">
    <table class="table table-hover text-nowrap">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><a href="/admin/categories/Edit/@item.Id" type="button" class="btn btn-block btn-outline-primary ">Edit</a></td>
                    <td><a href="/admin/categories/Delete/@item.Id" onclick="return confirm('Are you sure you wanna delete ?')" type="button" class="btn btn-block btn-outline-danger ">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
